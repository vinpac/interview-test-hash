{
  "scripts": {
    "dev": "next dev",
    "build": "yarn intl:compile && next build",
    "start": "next start",
    "type-check": "tsc --pretty --noEmit",
    "format": "prettier --write **/*.{js,ts,tsx}",
    "lint": "eslint . --ext ts --ext tsx --ext js",
    "test": "jest",
    "test-all": "yarn lint && yarn type-check && yarn test",
    "intl:extract": "formatjs extract 'src/{pages,components}/**/*.tsx' --out-file src/lang/pt-BR.json --id-interpolation-pattern '[sha512:contenthash:base64:6]'",
    "intl:compile": "formatjs compile src/lang/en.json --ast --out-file src/generated/lang/en.json"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn type-check && lint-staged",
      "post-commit": "yarn type-check && git update-index --again"
    }
  },
  "lint-staged": {
    "**/*.js": [
      "prettier --write"
    ],
    "**/*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "dependencies": {
    "classnames": "^2.2.6",
    "final-form": "^4.20.1",
    "intl": "^1.2.5",
    "next": "^10.0.7",
    "next-seo": "^4.7.1",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-final-form": "^6.5.2",
    "react-intl": "^5.13.2",
    "swr": "^0.3.0"
  },
  "devDependencies": {
    "@formatjs/cli": "^3.1.6",
    "@testing-library/react": "^11.2.5",
    "@types/classnames": "^2.2.11",
    "@types/jest": "^26.0.20",
    "@types/next-seo": "^2.1.2",
    "@types/node": "^14.0.14",
    "@types/react": "^17.0.2",
    "@types/react-dom": "^17.0.1",
    "@types/testing-library__react": "^10.2.0",
    "@typescript-eslint/eslint-plugin": "^4.16.1",
    "@typescript-eslint/parser": "^4.16.1",
    "babel-jest": "^26.6.3",
    "babel-plugin-formatjs": "^9.2.2",
    "eslint": "^7.21.0",
    "eslint-config-prettier": "^8.1.0",
    "eslint-plugin-react": "^7.22.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "husky": "^5.1.3",
    "jest": "^26.6.3",
    "jest-watch-typeahead": "^0.6.0",
    "lint-staged": "^10.2.11",
    "postcss": "^8.2.7",
    "postcss-preset-env": "^6.7.0",
    "prettier": "^2.2.1",
    "tailwindcss": "^2.0.3",
    "typescript": "^4.2.2"
  }
}
